{
  "git": {
    "commitMessage": "chore: release v{version}",
    "tagName": "v{version}",
    "push": true,
    "requireUpstream": false
  },
  "github": {
    "release": true,
    "releaseName": "Release v{version}",
    "assets": [
      "dist/*.js",
      "dist/*.d.ts",
      "dist/*.map"
    ],
    "draft": false,
    "prerelease": false
  },
  "npm": {
    "publish": true,
    "access": "public"
  },
  "hooks": {
    "before:init": [
      "npm run biome:format",
      "npm run biome:lint",
      "npm run type-check",
      "npm test",
      "npm run build"
    ],
    "after:release": "echo 'Release v{version} publicado com sucesso!'"
  },
  "increment": "patch",
  "requireUpstream": false
}
