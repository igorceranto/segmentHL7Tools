{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "push": true
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}"
  },
  "npm": {
    "publish": true,
    "access": "public"
  },
  "hooks": {
    "before:init": "npm run build",
    "after:release": "echo 'Release v${version} publicado com sucesso!'"
  }
}
